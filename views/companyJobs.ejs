	<script type="text/javascript">
		$(document).ready(function() {
			getCompanyJobs();

		});

		function getCompanyJobs() {
			
			$.get("/company/jobs", function(jobList) {
				showJobs(jobList);

			});
		}


		function showJobs(jobList) {
			$(".panel-body").empty();
			console.log("Response came for  " + jobList);
			var i;
			var list = '';
			var jobURL;
			var deleteJobURL;

			for (i = 0; i < jobList.length; ++i) {
				jobURL = '/showJobDetailsPage/' + jobList[i].jobId;
				deleteJobURL = '/company/'+jobList[i].companyId+'/jobs/'+jobList[i].jobId;
				if (i % 3 == 0) {
					list = list + '<div class="row">';
				}
				list = list
						+ '<div class="col-xs-4"><a class="center-block" href="'+jobURL+'">'
						+ jobList[i].companyName + '</a>'
						+ '<a class="center-block" href="'+jobURL+'">'
						+ jobList[i].jobTitle + '</a>' + '<p>'
						+ jobList[i].location + '</p><form action="'+deleteJobURL+'" method="get"><button class="btn btn-success pull-left" type="submit">Delete</button></form></div>';
				if ((i + 1) % 3 == 0) {
					list = list + '</div><br>';

				}
			}
			if (jobList.length > 0) {
				$(".panel-body").append(list);
			} else {
				$(".panel-body").append("<p>No Jobs available.</p>");
			}

		}
	</script>
