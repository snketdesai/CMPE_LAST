    <link href="../css/styles.css" rel="stylesheet">

  <script src="../js/jquery-1.11.2.min.js"></script>
  <script src="../js/bootstrap.min.js"></script>
  <script src="../js/scripts.js"></script>
  <script src="../js/ajaxcalls.js"></script>

  </head>
  <body>
<nav class="navbar navbar-fixed-top header">
  <div class="col-md-12">
        <div class="navbar-header">
          
          <a href="#" class="navbar-brand">LinkedIn Prototype</a>
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse1">
          <i class="glyphicon glyphicon-search"></i>
          </button>
      
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse1">
        </div>  
     </div> 
</nav>
<div class="navbar navbar-default" id="subnav">
    <div class="col-md-12">
        <div class="navbar-header">
          <a href="#" style="margin-left:15px;" class="navbar-btn btn btn-default btn-plus dropdown-toggle" data-toggle="dropdown"></i> Home <small></small></a>
          <a href="/company/logout" style="margin-left:5px;" class="navbar-btn btn btn-default btn-plus dropdown-toggle" data-toggle="dropdown"></i> Logout <small></small></a>
        </div>
    </div>  
</div>

<!--main-->
<div class="container" id="main">
   <!--row-->
   <div class="row">
   
    <div class="col-md-6 col-md-offset-3">
         
          <div class="well" id="cprofile"> 
            <div id="cform">
              <h4>Company Profile</h4>
              		<div class="form-group">
                		<div class="col-xs-6 col-sm-4" style="margin-right:0px;"><img id="cLogo" src="..." class="img-responsive" alt="Responsive image"><br></div>
	          		</div>
                <form>
	                <div class="form-group" >
	                	<input id="companyId" type="hidden" class="form-control" value=<%= companyId %> >
	                  <label for="companyName">Company Name</label>
	                  <input id="name" type="text" class="form-control" disabled>
	                </div>
	                <div class="form-group">
	                  <label for="overview">Company Overview</label>
	                  <textarea id="overviewText" class="form-control" id="overview" disabled></textarea>
	                </div>
	                <div class="form-group">
	                  <label for="website">Website Links</label>
	                  <input id="urlText" type="text" class="form-control" id="website" disabled>
	                </div>
	                <button id="followCompany" class="btn btn-success pull-right" type="button">Follow Company</button><ul class="list-inline"><li></li></ul>
                </form>
              </div>
          </div>
      
    </div>

  </div><!--/row-->
    
    <div class="clearfix"></div>
      
    <hr>
    <div class="col-md-12 text-center"><p>CmpE-282 CloudServices-LinkedIn Prototype</p></div>
    <hr>
    
  </div>
</div><!--/main-->

  <!-- script references -->
	  <script type="text/javascript">
	  	var cId = $("#companyId").val();
  		console.log("cId  "+cId);
  		if(cId === ''){
  			cId = 'junk';
  		}
  		$.ajax({
		    type: "GET",
		    url: "/company/"+cId,
		    crossDomain : true,
		    success: function( d ) {
		       if(typeof d.data[0] === 'undefined'){
		       		window.location='/companyregistrationpage';
		       }else{
	       			$("#name").val(d.data[0].companyName);
	       			$("#overviewText").val(d.data[0].overview);
	       			$("#urlText").val(d.data[0].url);
	       			$("#cLogo").attr("src", "."+d.data[0].logo);	
		       }
		    }
		});
	  </script>
  </body>
</html>